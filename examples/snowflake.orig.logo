TO KOCH :SIZE :DEPTH
  IF :DEPTH > 0 [
    KOCH :SIZE/3 :DEPTH-1
    LEFTTURN 60
    KOCH :SIZE/3 :DEPTH-1
    RIGHTTURN 120
    KOCH :SIZE/3 :DEPTH-1
    LEFTTURN 60
    KOCH :SIZE/3 :DEPTH-1
  ]
  IF :DEPTH = 0 [
    FORWARD :SIZE
  ]
END

TO SNOWFLAKE :SIZE :DEPTH
  REPEAT 3 [
    KOCH :SIZE :DEPTH
    RIGHTTURN 120
  ]
END

PENDOWN
SNOWFLAKE 500 8 
