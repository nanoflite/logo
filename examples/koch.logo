TO LINE :COUNT :LENGTH
 IF :COUNT = 1 [
    FD :LENGTH
    STOP
 ] 
 LINE :COUNT - 1 :LENGTH
 LT 60
 LINE :COUNT - 1 :LENGTH
 RT 120
 LINE :COUNT - 1 :LENGTH
 LT 60
 LINE :COUNT - 1 :LENGTH
END

TO KOCH :COUNT :LENGTH
  RT 30
  LINE :COUNT :LENGTH
  RT 120
  LINE :COUNT :LENGTH
  RT 120
  LINE :COUNT :LENGTH
END

REPEAT 10 [
    KOCH 4 9
    RT 36
]
